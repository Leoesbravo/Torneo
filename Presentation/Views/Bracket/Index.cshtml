        <section class="round semifinals">
            <div class="winners">
                <div class="matchups">
                    <div class="matchup">
                        <div class="participants">
                            <div class="participant ">
                                <span>TBD</span>
                            </div>
                            <div class="participant">
                                <span>TBD</span>
                            </div>
                        </div>
                    </div>
                    <div class="matchup">
                        <div class="participants">
                            <div class="participant ">
                                <span>TBD</span>
